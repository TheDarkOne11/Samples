<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:divider="@drawable/row_item_divider"
        android:background="@drawable/top_bottom_divider"
        android:id="@+id/row" android:layout_width="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/column0">
        <TextView
                android:text="time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/timeText"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <include android:layout_width="0dp" android:layout_height="wrap_content" layout="@layout/empty_space"
             android:layout_weight="2" android:id="@+id/space1"/>

    <include android:layout_width="0dp" android:layout_height="wrap_content" layout="@layout/empty_space"
             android:layout_weight="2" android:id="@+id/space2"/>

    <include android:layout_width="0dp" android:layout_height="wrap_content" layout="@layout/empty_space"
             android:layout_weight="2" android:id="@+id/space3"/>

    <include android:layout_width="0dp" android:layout_height="wrap_content" layout="@layout/empty_space"
             android:layout_weight="2" android:id="@+id/space4" android:visibility="gone"/>

    <include android:layout_width="0dp" android:layout_height="wrap_content" layout="@layout/empty_space"
             android:layout_weight="2" android:id="@+id/space5" android:visibility="gone"/>

    <include android:layout_width="0dp" android:layout_height="wrap_content" layout="@layout/empty_space"
             android:layout_weight="2" android:id="@+id/space6" android:visibility="gone"/>

    <include android:layout_width="0dp" android:layout_height="wrap_content" layout="@layout/empty_space"
             android:layout_weight="2" android:id="@+id/space7" android:visibility="gone"/>

</LinearLayout>